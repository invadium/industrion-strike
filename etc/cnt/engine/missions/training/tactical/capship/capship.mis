# Created by Shock (Igor Khotin) 20.05.2005
############################################

#Sides declaration variables
$Sides = 2;
$SideName1 = "Defenders";
$SideInfo1 = "(you)";
$SideName2 = "Attackers";

############################
#Creating far space objects
############################

CREATE "Proxima"
CLASS "Moon"
AT 20000000 -10000000 100000000;


##################################
#Creating navigation buoys
#around space-time anomaly points
##################################

CREATE "T-8711 W"
CLASS "Buoy"
AT	-2000	-100	2000;

CREATE "T-8711 X"
CLASS "Buoy"
AT	-2200	100	1800;

CREATE "T-8711 Y"
CLASS "Buoy"
AT	-1800	100	1800;

CREATE "T-8711 Z"
CLASS "Buoy"
AT	-2000	100	2200;


#Creating navigation buoys around space-time anomaly point T-8713

CREATE "T-8713 W"
CLASS "Buoy"
AT	2000	-100	2000;

CREATE "T-8713 X"
CLASS "Buoy"
AT	2200	100	1800;

CREATE "T-8713 Y"
CLASS "Buoy"
AT	1800	100	1800;

CREATE "T-8713 Z"
CLASS "Buoy"
AT	2000	100	2200;


#######################################
#          Defenders side
#######################################
CREATE "Star Maradeur"
	CLASS "Maradeur"
	AT 0 0 0;
SET "Star Maradeur" SIDE = 1;
SET "Star Maradeur" HUMAN_CONTROLLED = 1;

#attacking plan
PLAN 1 SIDE 2
ATTACK "Star Maradeur"
WITH AGRESSION 3;

BIND_CAMERA_TO "Star Maradeur";

$GLOBAL = 1;
$SW = 1;

PROC LCR;
	CREATE $NAME
		CLASS "Zero"
		AT -2000 0 2000;
END PROC;

PROC RCR;
	CREATE $NAME
		CLASS "Zero"
		AT 2000 0 2000;
END PROC;

PROC EVERY 10;
	$NAME = "Zero " + $GLOBAL;
	CALL LCR;
	SET $NAME SIDE = 2;
	SET $NAME PLAN = 1;
	SET $NAME PLAYER_PLACED = 0;
	SET $NAME PLAYER_CONTROLLED = 0;
	$GLOBAL = $GLOBAL + 1;	

	$NAME = "Zero " + $GLOBAL;
	CALL RCR;
	SET $NAME SIDE = 2;
	SET $NAME PLAN = 1;
	SET $NAME PLAYER_PLACED = 0;
	SET $NAME PLAYER_CONTROLLED = 0;
	$GLOBAL = $GLOBAL + 1;	

	MESSAGE "New zeros exiting from anomaly!";
END PROC;

PROC ON TIME 0.2;
	MESSAGE "We are awaiting for enemy fighters incoming" BEEP;
END PROC;

PROC ON TIME 0.5;
	MESSAGE "Destroy them all" BEEP;
END PROC;